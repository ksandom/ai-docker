#!/bin/bash
# Run the container in the current directory.

. ./shared/libs/container.sh

checkModelPath
createCache

set -x
# TODO Make this more elegant.
if ! docker exec -it "$containerName" /bin/bash; then
    docker run --rm -it --entrypoint /bin/bash --name "$containerName" -p "$port:$port" -v "$modelPath:$internalModelPath:z" -v "$optDir:/opt:z" -v .:/inside:z "$containerName"
fi
